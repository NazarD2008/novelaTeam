import discord
from discord.ext import commands

intents = discord.Intents.default()
intents.members = True  # –î–ª—è –æ—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏—è —Å–æ–±—ã—Ç–∏–π, —Å–≤—è–∑–∞–Ω–Ω—ã—Ö —Å —É—á–∞—Å—Ç–Ω–∏–∫–∞–º–∏

bot = commands.Bot(command_prefix='!', intents=intents)

@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')

@bot.event
async def on_member_update(before, after):
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å–ª–∏ —Ä–æ–ª—å "–≤–µ—Ä–µ—Ñ–Ω—É—Ç—ã–π" –±—ã–ª–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∞ —É—á–∞—Å—Ç–Ω–∏–∫—É
    role_id = 1325918814101180476
    verefnyt_role = discord.utils.get(after.roles, id=role_id)

    if verefnyt_role and verefnyt_role not in before.roles:
        try:
            await after.send(
                """–ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º —Å —É—Å–ø–µ—à–Ω–æ–π –≤–µ—Ä–∏—Ñ–∏–∫–∞—Ü–∏–µ–π –∏ –æ—Ñ–∏—Ü–∏–∞–ª—å–Ω—ã–º –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ–º –∫ –Ω–∞—à–µ–º—É —Å–æ–æ–±—â–µ—Å—Ç–≤—É!
                
üìö –í–∞–∂–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è:
–î–ª—è –±—ã—Å—Ç—Ä–æ–≥–æ –æ–∑–Ω–∞–∫–æ–º–ª–µ–Ω–∏—è —Å —Ä–∞–±–æ—á–∏–º–∏ –ø—Ä–æ—Ü–µ—Å—Å–∞–º–∏ –∏ –ø–æ–ª—É—á–µ–Ω–∏—è –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã—Ö –∑–Ω–∞–Ω–∏–π –Ω–∞—Å—Ç–æ—è—Ç–µ–ª—å–Ω–æ —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è –ø–æ—Å–µ—Ç–∏—Ç—å –∫–∞–Ω–∞–ª <#1325913319449559174>. –í —ç—Ç–æ–º —Ä–∞–∑–¥–µ–ª–µ —Å–æ–¥–µ—Ä–∂–∞—Ç—Å—è –≤—Å–µ –∫–ª—é—á–µ–≤—ã–µ —Ä—É–∫–æ–≤–æ–¥—Å—Ç–≤–∞, —Ä–µ—Å—É—Ä—Å—ã –∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è, –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –¥–ª—è —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–æ–≥–æ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –≤–∞—à–µ–π —Ä–∞–±–æ—Ç—ã.

–ü–æ—Å–ª–µ —Ç–æ–≥–æ –∫–∞–∫ –≤—ã –æ–∑–Ω–∞–∫–æ–º–∏—Ç–µ—Å—å —Å–æ –≤—Å–µ–º–∏ –º–∞—Ç–µ—Ä–∏–∞–ª–∞–º–∏ –∏ —Å–∫–∞—á–∞–µ—Ç–µ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ–µ –ø—Ä–æ–≥—Ä–∞–º–º–Ω–æ–µ –æ–±–µ—Å–ø–µ—á–µ–Ω–∏–µ, –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ —Å–æ–æ–±—â–∏—Ç–µ –æ–± —ç—Ç–æ–º –∫—É—Ä–∞—Ç–æ—Ä—É –¥–ª—è –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è –≤–∞—à–µ–π –≥–æ—Ç–æ–≤–Ω–æ—Å—Ç–∏ –∫ —Ä–∞–±–æ—Ç–µ."""
            )
        except Exception as e:
            print(f"–ù–µ —É–¥–∞–ª–æ—Å—å –æ—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ: {e}")

# –ó–∞–ø—É—Å–∫–∞–µ–º –±–æ—Ç–∞ —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º —Ç–æ–∫–µ–Ω–∞
bot.run('MTMyNzc2MzU2NjQzODI1MjU0NA.GFvty9.tJxSycPzWB-9IlXYy5x-ufQ7_i8x8DAzeQnDGM')
